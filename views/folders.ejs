<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Uploader</title>
  </head>
  <body>
    <% if (locals.user) { %>
      <nav>
        <a href="/home">Home</a>
        <a href="/folders">Folders</a>
        <a href="/logout">Logout</a>
      </nav>
      <p>Create a new folder</p>
      <form action="/folders" method="post">
        <input type="name" name="name" placeholder="Folder Name" />
        <button type="submit">Create</button>
      </form>
      <h2>Your Folders</h2>
      <% folders.forEach(folder => { %>
        <li>
          <a href="/folder/<%= folder.id %>"><%= folder.name %></a>
          <a href="/edit/<%= folder.id %>">Edit</a>
          <form action="/delete/<%= folder.id %>" method="post">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }) %>
    <% } else { %>
      <h1>Welcome, Guest!</h1>
      <nav>
        <a href="/home">Home</a>
        <a href="/folders">Folders</a>
        <a href="/register">Register</a>
      </nav>
      <p>Please <a href="/">login</a> to see and upload files.</p>
    <% } %>
  </body>
</html>